<Window x:Class="avta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:avta"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Авторизация" VerticalAlignment="Bottom" HorizontalAlignment="Center" />
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Логин" />
            <TextBox x:Name="txtUsername" HorizontalAlignment="Center" Width="300"/>
            <TextBlock Text="Пароль" />
            <PasswordBox x:Name="txtPassword" HorizontalAlignment="Center" Width="300"/>
            <Button Content="Войти" Click="Button_Click"/>


        </StackPanel>
    </Grid>
</Window>
