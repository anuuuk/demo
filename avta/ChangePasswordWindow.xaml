<Window x:Class="avta.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:avta"
        mc:Ignorable="d"
        Title="ChangePasswordWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock  TextWrapping="Wrap" Text="Смена пароля" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <StackPanel Grid.Row="1" Width="300">
                <TextBlock HorizontalAlignment="Center"   TextWrapping="Wrap" Text="Текущий пароль" />
        <PasswordBox x:Name="txtCurrentPassword"     Width="150"/>
            <TextBlock HorizontalAlignment="Center"   TextWrapping="Wrap" Text="Новый пароль" />
        <PasswordBox x:Name="txtNewPassword"     Width="150"/>
            <TextBlock HorizontalAlignment="Center"  TextWrapping="Wrap" Text="Подтверите новый пароль" />
        <PasswordBox x:Name="txtConfirmNewPassword"     Width="150"/>
            <Button Content="Изменить пароль" Width="150" HorizontalAlignment="Center" Click="Button_Click"  />
</StackPanel>
    </Grid>
</Window>
