<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Валидатор ФИО" Height="250" Width="400">
    <Grid Margin="15">
        <StackPanel>
            <Button Content="Получить данные" 
                    Click="BtnGetData_Click"
                    Width="120" Margin="0,0,0,10"/>

            <Border BorderBrush="Gray" BorderThickness="1" Padding="5">
                <TextBlock x:Name="txtData" 
                           TextWrapping="Wrap"
                           FontSize="14"/>
            </Border>

            <Button Content="Отправить результат теста" 
                    Click="BtnSendResult_Click"
                    Margin="0,15" Width="180"/>

            <TextBlock x:Name="txtValidationResult"
                       Foreground="Red"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
